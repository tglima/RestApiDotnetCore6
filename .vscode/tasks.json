{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prebuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/WebApi/SlnRestapiDotnetCore6.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": "prebuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/WebApi/SlnRestapiDotnetCore6.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}